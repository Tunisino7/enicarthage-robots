<div class="container" style="margin-top: 100px;">
  <div class="row">
    <div class="col-6">
      <h1>Identifiez-vous</h1>
      <%= form_tag "/admin/login", method: :post do %>
      <div class="form-group row">
        <%= label_tag "Adresse Email:", nil, class: "col-3 col-form-label" %>
        <div class="col-9"><%= text_field_tag :name %></div>
      </div>
      <div class="form-group row">
        <%= label_tag "Mot de passe:", nil, class: "col-3 col-form-label" %>
        <div class="col-9"><%= password_field_tag :password %></div>
      </div>
      <div class="actions">
        <%= submit_tag "Log In", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
    <div class="col-6">
    </div>
  </div>
</div>
